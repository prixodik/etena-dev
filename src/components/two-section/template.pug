
mixin twoSection(data)
	.two-section.js-two-section&attributes(attributes)
		img(src="images/two-section/mountain-right.png", alt="")._mright.-hide-lg
		img(src="images/two-section/mountain-left.png", alt="")._mleft.-hide-lg

		._container
			img(src="images/two-section/shadow.png", alt="")._shadow

			img(src="images/two-section/mountain-right.png", alt="")._mright
			img(src="images/two-section/mountain-left.png", alt="")._mleft
			img(src="images/two-section/mountain-back.png", alt="")._back

		img(src="images/two-section/hero.png", alt="")._hero
		img(src="images/two-section/mountains-below.png", alt="")._below
		img(src="images/two-section/shadows2.png", alt="")._shadow2